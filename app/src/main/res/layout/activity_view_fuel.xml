<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E5E5"
    tools:context=".ViewFuel">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="12dp"
        android:text="Back"

        android:textAllCaps="false" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:textAlignment="center"
        android:fontFamily="@font/sf_pro_text_bold"
        android:text="Fuel Station Details"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="14dp"
        android:paddingHorizontal="12dp">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textColor="#1C1243"
            android:text="Petrol:" />

        <TextView
            android:id="@+id/petrol_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#1C1243"
            android:text="Available" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        android:paddingHorizontal="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#1C1243"
            android:text="Next Fill Date" />


        <TextView
            android:id="@+id/next_petrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#1C1243"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="14dp"
        android:paddingHorizontal="12dp">

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textColor="#1C1243"
            android:text="Diesel:" />

        <TextView
            android:id="@+id/diesel_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#1C1243"
            android:text="Available" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        android:paddingHorizontal="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#1C1243"
            android:text="Next Fill Date" />


        <TextView
            android:id="@+id/next_diesel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#1C1243"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        android:paddingHorizontal="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textColor="#1C1243"
            android:text="Car Queue: " />
        <TextView
            android:id="@+id/car_count"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#1C1243"
            android:text="" />

        <Button
            android:id="@+id/join_car"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginHorizontal="8dp"
            android:text="Join Queue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        android:paddingHorizontal="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textColor="#1C1243"
            android:text="Van Queue: " />
        <TextView
            android:id="@+id/van_count"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#1C1243"
            android:text="" />

        <Button
            android:id="@+id/join_van"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginHorizontal="8dp"
            android:text="Join Queue" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        android:paddingHorizontal="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textColor="#1C1243"
            android:text="Bike Queue: " />

        <TextView
            android:id="@+id/bike_count"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#1C1243"
            android:text="" />

        <Button
            android:id="@+id/join_bike"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginHorizontal="8dp"
            android:text="Join Queue" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        android:paddingHorizontal="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textColor="#1C1243"
            android:text="Threewheler Queue: " />

        <TextView
            android:id="@+id/threewheel_count"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#1C1243"
            android:text="" />

        <Button
            android:id="@+id/join_threewheeler"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginHorizontal="8dp"
            android:text="Join Queue" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        android:paddingHorizontal="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textColor="#1C1243"
            android:text="Other Petrol Vehicle Queue: " />

        <TextView
            android:id="@+id/other_petrol_count"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#1C1243"
            android:text="" />

        <Button
            android:id="@+id/other_petrol_join"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginHorizontal="8dp"
            android:text="Join Queue" />

    </LinearLayout>

</LinearLayout>