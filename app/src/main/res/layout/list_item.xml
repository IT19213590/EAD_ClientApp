<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/edit_stationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stationName" />

    <TextView
        android:id="@+id/edit_petrol_available_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="petrol_available_state" />

    <TextView
        android:id="@+id/edit_diesel_available_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="diesel_available_state" />

    <TextView
        android:id="@+id/edit_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="address" />
</LinearLayout>